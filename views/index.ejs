<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PropTec Angle Group</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <div class="container mt-5">
    <div class="row">
      <!-- Left Section -->
      <div class="col-md-4 left-section border-right">
        <h4 class="mb-4">Filter Options</h4>
        <form id="filterForm">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Enter investor name" class="form-control">
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter investor email" class="form-control">
          </div>
          <div class="form-group">
            <label for="firm">Firm</label>
            <input type="text" id="firm" name="firm" placeholder="Enter firm name" class="form-control">
          </div>
          <div class="form-group">
            <label for="video">Video</label>
            <input type="text" id="video" name="video" placeholder="Enter video link" class="form-control">
          </div>
          <div class="form-group">
            <label for="dropdown_geo">Geography</label>
            <select id="dropdown_geo" name="dropdown_geo" placeholder="Select geography" class="form-control" multiple size="5">
              <option value="">Loading...</option>
            </select>
          </div>
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="city" name="city" placeholder="Enter city" class="form-control">
          </div>
          <div class="form-group">
            <label for="min">Investment Min</label>
            <input type="number" id="min" name="min" placeholder="Enter minimum investment" class="form-control">
          </div>
          <div class="form-group">
            <label for="max">Investment Max</label>
            <input type="number" id="max" name="max" placeholder="Enter maximum investment" class="form-control">
          </div>
          <div class="form-group">
            <label for="sweetspot">Investment Sweet Spot</label>
            <input type="number" id="sweetspot" name="sweetspot" placeholder="Enter ideal investment" class="form-control">
          </div>
          <div class="form-group">
            <label for="dropdown_part">Participation</label>
            <select id="dropdown_part" name="dropdown_part" placeholder="Select the type of participation" class="form-control" multiple size="5">
              <option value="">Loading...</option>
            </select>
          </div>
          <div class="form-check">
            <input type="checkbox" id="tick1" name="tick1" class="form-check-input">
            <label for="tick1" class="form-check-label">PropTec Only</label>
          </div>

          <div class="form-group">
            <label for="tagInput">Enter Tags</label>
            <input type="text" id="tagInput" class="form-control" placeholder="Type and press Enter">
          </div>
          <div id="tagContainer" class="mt-2">
            <!-- Tags will be added here -->
      
          </div>
          <input type="hidden" id="tagsInputHidden" name="tags">
          

          <div class="form-group">
            <label for="dropdown_series">Series</label>
            <select id="dropdown_series" name="dropdown_series" placeholder="Select the investment series" class="form-control" multiple size="5">
              <option value="">Loading...</option>
            </select>
          </div>

          <div class="form-group">
            <label for="dropdown_medium">Tec Medium</label>
            <select id="dropdown_medium" name="dropdown_medium" class="form-control" placeholder="Select the tec medium" multiple size="5">
              <option value="">Loading...</option>
            </select>
          </div>

          <div class="form-group">
            <label for="state">State</label>
            <input type="text" id="state" name="state" placeholder="Enter investor state" class="form-control">
          </div>
          
          <button type="submit" class="btn btn-primary mt-3">Search</button>
        </form>
      </div>

      <!-- Right Section -->
      <div class="col-md-8 right-section">
        <h4 class="mb-4">Available Investors</h4>
        <div id="results" class="p-3 border bg-light">No results yet</div>
      </div>
    </div>
  </div>

  <script src="/js/script.js"></script>
</body>

</html>

